{
  "extends": ["@medic"],
  "plugins": ["json"],
  "parserOptions": {
    "ecmaVersion": 6
  },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "max-len": "off",
    "no-console": "off",
    "no-debugger": "off",
    "quotes": ["error", "single", { "allowTemplateLiterals": true, "avoidEscape": true }]
  },
  "globals": {
    "contact": true,
    "lineage": true,
    "reports": true
  }
}
